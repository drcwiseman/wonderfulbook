# Wonderful Books Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
PGDATABASE=database_name
PGHOST=database_host
PGPASSWORD=database_password
PGPORT=5432
PGUSER=database_username

# Session Management
SESSION_SECRET=your_super_secret_session_key_here_minimum_32_characters

# Stripe Payment Processing
# Note: Keys are swapped in the current implementation
STRIPE_SECRET_KEY=pk_test_... (actually contains the public key)
VITE_STRIPE_PUBLIC_KEY=sk_test_... (actually contains the secret key)

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@wonderfulbooks.com

# Application Environment
NODE_ENV=development

# Optional: Anti-Abuse Configuration
RATE_LIMIT_WINDOW_MS=3600000
MAX_SIGNUPS_PER_IP=5
MAX_SIGNUPS_PER_HOUR=3

# Optional: File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_PATH=./uploads